<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".MemoryGameFragment">

    <TextView
        android:id="@+id/tvMemoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_ecomemory"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvMoves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_info_chip"
            android:paddingVertical="6dp"
            android:text="@string/tv_movimientos_0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/info_chip_text"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvMemoryScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_info_chip"
            android:paddingVertical="6dp"
            android:text="@string/tv_puntaje_0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/info_chip_text"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMemoryGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutInfo"
        app:layout_constraintBottom_toTopOf="@id/tvTimeMemory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTimeMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_tiempo_0s"
        android:background="@drawable/bg_info_chip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/info_chip_text"
        android:textStyle="bold"
        android:layout_marginBottom="64dp"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
