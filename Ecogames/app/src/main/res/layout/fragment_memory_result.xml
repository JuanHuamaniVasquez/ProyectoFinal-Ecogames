<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".MemoryResultFragment">

    <TextView
        android:id="@+id/tvMemoryResultTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_resultados_ecomemory"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Datos de la partida actual -->
    <TextView
        android:id="@+id/tvMemoryCurrentScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_puntaje_actual_0"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryResultTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMemoryCurrentMoves"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_movimientos_0"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryCurrentScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMemoryCurrentTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_tiempo_0s"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryCurrentMoves"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mejor puntaje histÃ³rico -->
    <TextView
        android:id="@+id/tvMemoryBestScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_mejor_puntaje_0"
        android:textSize="15sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMemoryHistoryLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_partidas_anteriores"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryBestScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMemoryHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemoryHistoryLabel"
        app:layout_constraintBottom_toTopOf="@id/btnClearMemoryHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnClearMemoryHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_borrar_historial"
        android:backgroundTint="@color/bin_black"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBackToMenuFromMemory" />

    <Button
        android:id="@+id/btnBackToMenuFromMemory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_volver_al_menu"
        android:backgroundTint="@color/bin_green"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
