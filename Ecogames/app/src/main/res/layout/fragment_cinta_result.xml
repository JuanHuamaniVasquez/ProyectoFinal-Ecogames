<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".CintaResultFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvCintaResultTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resultados Cinta Eco"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card resumen de la partida actual -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCintaCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvCintaResultTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/material_dynamic_neutral100"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCintaCurrentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_tu_partida"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />

            <!-- Puntaje grande -->
            <TextView
                android:id="@+id/tvCintaCurrentScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntaje actual: 0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp" />

            <!-- Chips de aciertos y vidas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvCintaCurrentCorrect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_info_chip"
                    android:paddingVertical="6dp"
                    android:text="Aciertos: 0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/info_chip_text"
                    android:gravity="center" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCintaCurrentLives"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_info_chip"
                    android:paddingVertical="6dp"
                    android:text="Vidas restantes: 0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/info_chip_text"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCintaBestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mejor puntaje histórico: 0"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card de historial -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCintaHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardCintaCurrent"
        app:layout_constraintBottom_toTopOf="@id/btnClearCintaHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_dynamic_neutral95"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvCintaHistoryLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Partidas anteriores"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCintaHistory"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvCintaHistoryLabel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón borrar historial -->
    <Button
        android:id="@+id/btnClearCintaHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_borrar_historial"
        android:backgroundTint="@color/bin_black"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBackToMenuFromCinta" />

    <!-- Botón volver al menú -->
    <Button
        android:id="@+id/btnBackToMenuFromCinta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_volver_al_menu"
        android:backgroundTint="@color/bin_green"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
