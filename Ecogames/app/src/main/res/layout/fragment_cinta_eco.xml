<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".CintaEcoFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvCintaTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_cintatittle"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Info: Puntaje, racha, vidas -->
    <LinearLayout
        android:id="@+id/layoutCintaInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvCintaTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvCintaScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_info_chip"
            android:paddingVertical="6dp"
            android:text="@string/tv_puntaje"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/info_chip_text"
            android:gravity="center" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCintaStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_info_chip"
            android:paddingVertical="6dp"
            android:text="@string/tv_racha"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/info_chip_text"
            android:gravity="center" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCintaLives"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_info_chip"
            android:paddingVertical="6dp"
            android:text="@string/tv_cintalives"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/info_chip_text"
            android:gravity="center" />
    </LinearLayout>

    <!-- Zona de la “cinta” -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardConveyor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/layoutCintaInfo"
        app:layout_constraintBottom_toTopOf="@id/layoutCintaBins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCintaHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_cinta_hint"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivCintaItem"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="@string/app_name"
                tools:src="@drawable/ic_cascara_platano" />

            <TextView
                android:id="@+id/tvCintaItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_cinta_elemento"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp" />

            <!-- Barra de progreso del tiempo por objeto -->
            <ProgressBar
                android:id="@+id/progressItemTime"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:scaleY="1.5"
                android:progress="100"
                android:max="100" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tachos -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/layoutCintaBins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardConveyor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:columnCount="2"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/btnBrown"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/btn_organico"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/bin_brown"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/btn_reciclable"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/bin_green"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btnBlack"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/btn_no_reciclable"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/bin_black"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btnHazard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/btn_peligroso"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/bin_red"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
